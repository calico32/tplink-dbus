{
  "include": ["src"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "incremental": true,
    "moduleResolution": "node"
  }
}
